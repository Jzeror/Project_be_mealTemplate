<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.bemeal.web.taste.TasteMapper">
  	<insert id="post">
  		INSERT INTO TASTE
  		(QUANTITY,DIR_NAME,GRADE,FLAG,MEMBER_ID,ITEM_SEQ)
  		VALUES
  		(#{quantity},#{dirName},#{grade},#{flag},#{memberId},#{itemSeq})
  	</insert>
 	<select id="existGrade" resultType="int">
  	SELECT COUNT(*) FROM TASTE WHERE MEMBER_ID LIKE #{id}
  	</select>
  </mapper>